<script>
    // Fonction pour fermer manuellement les flash messages
    function closeAlert(id) {
        const alert = document.getElementById(id);
        if (alert) {
            alert.classList.remove('show');
            setTimeout(() => alert.remove(), 150);
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        // Auto-fermeture des flash messages apr√®s 5 secondes
        const alerts = document.querySelectorAll('[id^="flash-alert-"]');
        alerts.forEach(function(alert) {
            setTimeout(function() {
                alert.classList.remove('show');
                setTimeout(() => alert.remove(), 150);
            }, 5000);
        });

        // Affichage conditionnel piece_issued
        const pieceIssuedRadios = document.querySelectorAll('input[name="work_order_closure[piece_issued]"]');
        const ifNotIssuedContainer = document.getElementById('ifPieceNotIssued-container');

        if (pieceIssuedRadios.length > 0 && ifNotIssuedContainer) {
            function toggleIfNotIssued() {
                const selectedValue = document.querySelector('input[name="work_order_closure[piece_issued]"]:checked');

                if (selectedValue && selectedValue.value === '0') {
                    ifNotIssuedContainer.style.display = 'block';
                } else {
                    ifNotIssuedContainer.style.display = 'none';
                }
            }

            pieceIssuedRadios.forEach(radio => {
                radio.addEventListener('change', toggleIfNotIssued);
            });

            toggleIfNotIssued();
        }

        // Gestion conditionnelle radio buttons (existant)
        function isYesChecked(container) {
            const radios = container?.querySelectorAll('input[type="radio"]');
            return Array.from(radios || []).some(r => r.checked && ['1', 'true', 'on'].includes(r.value));
        }

        function hasAnySelection(container) {
            const radios = container?.querySelectorAll('input[type="radio"]');
            return Array.from(radios || []).some(r => r.checked);
        }

        const pieceGroup = document.getElementById('piece-group');
        const pieceDependent = document.getElementById('piece-dependent');

        function updatePiece() {
            if (!pieceGroup || !pieceDependent) return;
            pieceDependent.style.display = (hasAnySelection(pieceGroup) && !isYesChecked(pieceGroup)) ? 'block' : 'none';
        }

        pieceGroup?.addEventListener('change', updatePiece);
        updatePiece();
    });
</script>
